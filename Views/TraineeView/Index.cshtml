
@{
    ViewBag.Title = "Index";
}

<center><h2>Application Form</h2></center>
<div class="container">
    <div class="master">
        <h3>Please Fill Up All Information</h3>
        <table class="table table-hover table-responsive table-bordered">

            <tr>
                <td>Trainee Name</td>
                <td>
                    <input type="text" id="tName" class="tName form-control" />
                    <span class="error">Please Provide an Trainee Name</span>
                </td>

                <td>Father Name</td>
                <td>
                    <input type="text" id="fName" class="fName form-control" />
                    <span class="error">Please Provide an Father Name</span>
                </td>
            </tr>

            <tr>
                <td>Gender</td>
                <td>
                    <input type="text" id="gender" class="gender form-control" />
                    <span class="error">Please Provide an Gender</span>
                </td>

                <td>Date Of Birth</td>
                <td>
                    <input type="date" id="dob" class="dob form-control" />
                    <span class="error">Valid date required(MM-dd-yyyy)</span>
                </td>
            </tr>

            <tr>
                <td>Address</td>
                <td>
                    <textarea id="address" class="form-control"></textarea>
                </td>

                <td>Email</td>
                <td>
                    <input type="email" id="email" class="form-control" />
                    <span class="error">Valid email required</span>
                </td>
            </tr>

            <tr>
                <td>Image</td>
                <td>
                    <input type="file" name="ImageFile" id="imageupload" class="form-control" />
                </td>

                <td>All the Informations Are Correct</td>
                <td>
                    <input type="checkbox" id="bool" class="form-control" />
                </td>
            </tr>
        </table>
    </div>

    <div class="details">
        <h2>Select Course</h2>
        <table class="table table-responsive table-hover table-bordered">
            <tr>
                <td>Course Category</td>
                <td>Course Name</td>
                <td>Duration</td>
                <td>Course Fee</td>
                <td></td>
            </tr>
            <tr class="mycontainer" id="mainrow">
                <td>
                    <select id="courseCategory" class="cc form-control" onchange="LoadCourse(this)">
                        <option>Select</option>

                    </select>
                    <span class="error">Select Category</span>
                </td>
                <td>
                    <select id="course" class="course form-control">
                        <option>Select</option>
                    </select>
                    <span class="error">Select Course</span>
                </td>
                <td>
                    <input type="text" id="duration" class="duration form-control" />
                    <span class="error">Please Provide Valid Quantity</span>
                </td>
                <td>
                    <input type="text" id="fee" class="fee form-control" />
                    <span class="error">Please Provide Valid Rate</span>
                </td>
                <td>
                    <input type="button" id="add" value="Add" style="width:80px" class="btn btn-success" />
                </td>
            </tr>
        </table>


        <div id="courseList">
            @Html.Partial("_PartialView")
        </div>

        <div style="padding:10px 0; text-align:right;">
            <input type="submit" id="submit" value="Enroll" class="btn btn-warning" style="padding:10px 20px" />
        </div>

    </div>

</div>


<div>

</div>

<script src="~/Scripts/my_script.js"></script>

<style>
    span.error {
        display: block;
        visibility: hidden;
        color: red;
        font-size: 90%;
    }

    tr.error {
        background-color: brown;
    }
</style>


